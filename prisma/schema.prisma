generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Duvida {
  id        Int      @id @default(autoincrement())
  titulo    String
  descricao String
  criadoEm  DateTime @default(now())

  respostas Resposta[]
}


model Resposta {
  id       Int      @id @default(autoincrement())
  texto String
  criadoEm DateTime @default(now())

  duvidaId Int
  duvida   Duvida @relation(fields: [duvidaId], references: [id])
}
